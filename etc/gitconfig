[user]
	name = Rodolfo Borges
	email = rodolfo.borges@gmail.com

[core]
	excludesfile = ~/.gitignore

[alias]

	# recent log
	l  = log --pretty=format:'%h %Cblue%cr%Creset %cn %Cred%d %Cgreen%s%Creset' --graph --all -n 12

	# complete log
	ll = log --pretty=format:'%h %Cblue%cr%Creset %cn %Cred%d %Cgreen%s%Creset' --graph --all

	# review last commit
	r  = log --patch-with-stat --ignore-space-change -n 1

	# commit
	c     = commit
	ca    = commit -a
	ci    = commit --interactive
	fixup = commit --amend -C HEAD

	ri = rebase -i

	d  = diff -p --stat -b --patience
	ds = diff -p --stat -b --patience --staged

	s  = status -sb --untracked-files=no
	sa = status -sb

	st = stash
	sp = stash pop

	co = checkout
	p  = pull --autostash --rebase

[apply]
	whitespace = strip

[diff]
	color = auto
	rename = copy

[pager]
	color = true

[status]
	color = auto

[color]
	ui          = always
	interactive = always
	branch      = auto
	diff        = auto
	pager       = true
	status      = auto

[merge]
	tool = vimdiff
	options = --no-ff

[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = rodolfo.borges@gmail.com
	smtpserverport = 587
[push]
	default = simple
