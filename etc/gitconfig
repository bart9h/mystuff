[user]
	name = Rodolfo Borges
	email = rodolfo.borges@gmail.com

[core]

[alias]

	# recent log
	l  = log --pretty=format:'%h %Cblue%cr%Creset %cn %Cred%d %Cgreen%s%Creset' --graph --all -n 12

	# complete log
	ll = log --pretty=format:'%h %Cblue%cr%Creset %cn %Cred%d %Cgreen%s%Creset' --graph --all

	# review last commit
	r  = log --patch-with-stat --ignore-space-change -n 1

	# add
	a  = add
	ap = add -p

	# commit
	c     = commit
	cm    = commit -m
	cam   = commit -a -m
	ci    = commit --interactive
	fixup = commit --amend -C HEAD

	# diff
	d  = diff -p --stat -b --patience
	ds = diff -p --stat -b --patience --staged

	# status
	s  = status -sb --untracked-files=no
	sa = status -sb

	# stash
	st = stash
	sp = stash pop
	sl = stash list
	ss = stash show -p

	# misc
	ri = rebase --autostash -i
	co = checkout
	p  = pull --autostash --rebase

[apply]
	whitespace = strip

[diff]
	color = auto
	rename = copy

[pager]
	color = true

[status]
	color = auto

[color]
	ui          = always
	interactive = always
	branch      = auto
	diff        = auto
	pager       = true
	status      = auto

[merge]
	tool = vimdiff
	options = --no-ff

[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = rodolfo.borges@gmail.com
	smtpserverport = 587

[push]
	default = simple
