[user]
	name = Rodolfo Borges
	email = rodolfo.borges@gmail.com

[core]
	excludefiles = ~/.gitignore

[alias]
	c  = commit
	ca = commit -a
	ci = commit --interactive
	co = checkout
	d  = diff
	st = status -a
	ri = rebase -i
	fixup = commit --amend -C HEAD
	l = log --pretty=format:'%h %Cblue%cr%Creset %cn %Cred%d %Cgreen%s%Creset' --graph --all

[apply]
	whitespace = strip

[diff]
	color = auto
	rename = copy

[pager]
	color = true

[status]
	color = auto

[color]
	ui = always
	interactive = always
	branch = auto
	diff = auto
	pager = true
	status = auto

[merge]
	tool = vimdiff
	options = --no-ff

[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = rodolfo.borges@gmail.com
	smtpserverport = 587
