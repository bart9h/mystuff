[user]
	name = Rodolfo Borges
	email = rodolfo.borges@gmail.com

[core]
	excludesfile = ~/.gitignore

[alias]
	c  = commit
	ca = commit -a
	ci = commit --interactive
	co = checkout
	d  = diff -p --stat -b --patience
	l  = log --pretty=format:'%h %Cblue%cr%Creset %cn %Cred%d %Cgreen%s%Creset' --graph --all
	ri = rebase -i
	s  = status -sb --untracked-files=no
	sa = status -sb
	fixup = commit --amend -C HEAD

[apply]
	whitespace = strip

[diff]
	color = auto
	rename = copy

[pager]
	color = true

[status]
	color = auto

[color]
	ui          = always
	interactive = always
	branch      = auto
	diff        = auto
	pager       = true
	status      = auto

[merge]
	tool = vimdiff
	options = --no-ff

[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = rodolfo.borges@gmail.com
	smtpserverport = 587
[push]
	default = simple
