#fbsetbg -c /home/doti/share/wallpaper/actf38.jpg
fbsetbg -c /home/doti/share/wallpaper/quake3logo.jpg

#--- log messages in background
root-tail -f -geometry 800x480+0+0 -fn fixed /var/log/messages,\#444444

#--- set Shutdown/Reboot buttons
(
	xmessage -buttons "Shutdown:20,Reboot:21" "" ;
	case $? in
		20)
			exec /sbin/poweroff
		;;
		21)
			exec /sbin/reboot
		;;
		*)
			echo "Xmessage closed on `date`"
		;;
	esac
)&

